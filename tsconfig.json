{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es5",
    "strict": false,
    "lib": ["es6", "es2017"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true
  },

  "exclude": ["node_modules", "dist"]
}
